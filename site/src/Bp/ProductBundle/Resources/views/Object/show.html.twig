{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Object</h1>

    <table class="record_properties table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Reference</th>
                <td>{{ entity.reference }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ entity.status }}</td>
            </tr>
            <tr>
                <th>Quality</th>
                <td>{{ entity.quality }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions list-inline">
    <li>
        <a href="{{ path('admin_object') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('admin_object_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
