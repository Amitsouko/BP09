{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Object list</h1>

    <table class="records_list table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Reference</th>
                <th>Product</th>
                <th>Status</th>
                <th>Quality</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('admin_object_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td><a href="{{ path('admin_object_show', { 'id': entity.id }) }}">{{ entity.reference }}</a></td>
                <td><a href="{{ path('admin_product_show', { 'id': entity.product.id }) }}">{{ entity.product.name }}</a></td>
                <td>{{ entity.status }}</td>
                <td>{{ entity.quality }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('admin_object_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('admin_object_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('admin_object_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
