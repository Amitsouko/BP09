{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Photo</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>    <img src="{{ entity.webPath|imagine_filter("type_medium") }}"></td>
            </tr>
            <tr>
                <th>Alt</th>
                <td>{{ entity.alt }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ entity.description }}</td>
            </tr>
            <tr>
                <th>Galerie</th>
                <td>
                    {% if entity.product %}
                    <a href="{{ path("admin_product_show", {id: entity.product.id}) }}">{{ entity.product.name }}</a>
                    {% else %}
                    <a href="{{ path("admin_pack_show", {id: entity.pack.id}) }}">{{ entity.pack.name }}</a>
                    {% endif %}
                </td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('admin_photo') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('admin_photo_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
