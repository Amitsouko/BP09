{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Pack</h1>

    <table class="record_properties table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ entity.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ entity.description }}</td>
            </tr>
            <tr>
                <th>Reference</th>
                <td>{{ entity.reference }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ entity.price|price }}</td>
            </tr>
            <tr>
                <th>Quantity</th>
                <td>{{ entity.quantity }}</td>
            </tr>
            <tr>
                <th>Active</th>
                <td>{{ entity.active }}</td>
            </tr>
        </tbody>
    </table>

    <h2>Products</h2>
    <ul>
        {% for product in entity.products %}
            <li><a href="{{ path('admin_product_show', { 'id': product.id }) }}">{{ product.name }}</a></li>
        {% endfor %}
    </ul>

        <ul class="record_actions list-inline">
    <li>
        <a href="{{ path('admin_pack') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('admin_pack_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
