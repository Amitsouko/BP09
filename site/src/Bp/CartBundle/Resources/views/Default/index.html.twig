
<table>
    <thead>
        <tr>
            <th>Nom</th>
            <th>Prix à l'unité</th>
            <th>Quantité</th>
            <th>Prix</th>
            <th>actions</th>
        </tr>
    </thead>
    <tbody>
        {% for item in cart.products %}
        <tr>
            <td>{{ item.name }}
            {% if item.products is defined %}
                <table>
                {% for it in item.products %}
                    <tr><td>{{ it.name }}</td></tr>
                {% endfor %}
                </table>
            {% endif %}
            </td>
            <td>{{ item.price }}</td>
            <td>{{ item.userQuantity }}</td>
            <td>{{ item.price *item.userQuantity }}</td>
            <td><a href="{{ path("bp_cart_actioncart_remove",{type: item.type,id:item.id}) }}">Supprimer</a></td>
        </tr>
        {% endfor %}
        <tr>
            <td>Sous-total</td>
            <td></td>
            <td></td>
            <td>{{ cart.price|price }}</td>
        </tr><tr>
            <td>TVA</td>
            <td></td>
            <td></td>
            <td>{{ cart.tva|percent }}</td>
        </tr>
        <tr>
            <td>Prix total</td>
            <td></td>
            <td></td>
            <td>{{ cart.priceTtc|price }}</td>
        </tr>

    </tbody>
</table>

    <div class="payment-wrapper">
       <form action="" method="POST" id="payment-form">
         <span class="payment-errors"></span>

         <div class="form-row">
           <label>
             <span>Card Number</span>
             <input type="text" size="20" data-stripe="number"/>
           </label>
         </div>

         <div class="form-row">
           <label>
             <span>CVC</span>
             <input type="text" size="4" data-stripe="cvc"/>
           </label>
         </div>

         <div class="form-row">
           <label>
             <span>Expiration (MM/YYYY)</span>
             <input type="text" size="2" data-stripe="exp-month"/>
           </label>
           <span> / </span>
           <input type="text" size="4" data-stripe="exp-year"/>
         </div>

         <button id="payment-submit" type="submit">Submit Payment</button>
       </form>
    </div>

<script src="//code.jquery.com/jquery-1.11.3.min.js"></script>

    {{ stripe_scripts() }}

