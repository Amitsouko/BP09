{% extends "BpCoreBundle::mainlayout.html.twig" %}

{% block body %}


    <div class="top-header">
        <div class="container">
            <div class="img-container">
                {% if pack.mainPhoto %}
                <img src="{{ pack.mainPhoto.webPath|imagine_filter("medium") }}" alt="{{ pack.mainPhoto.alt }}" title="{{ pack.mainPhoto.description }}">
                {% else %}
                <img src="{{ asset('public/img/withings-pack-large.png') }}" alt="">
                {% endif %}
            </div>
            <h1>{{ pack.name }}</h1>
            <p>{{ pack.description }}</p>
            <div class="price-container">
                <a href="#" class="button">Je veux tester ce pack</a>   
                <p class="price">+ {{ pack.price }}</p>
            </div>
        </div>
    </div>

    <div class="list-products">
        <div class="container">

            {% for product in pack.products %}

            <div class="product-item">
                {% include 'BpCoreBundle:components:product-detail.html.twig' with {'product':product,'page':'pack-list'} %}
            </div>

            {% endfor %}
            
        </div>

        <div class="price-container">
            <div>
                <a href="#" class="button">Je veux tester ce pack</a>   
                <p class="price">+ {{ pack.price }}</p>
            </div>
        </div>
    </div>


{% endblock body %}

